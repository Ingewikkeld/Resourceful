<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="ingewikkeld_rest_oauth_server.controller.client.class">Ingewikkeld\Rest\OAuthServerBundle\Controller\ClientController</parameter>
        <parameter key="ingewikkeld_rest_oauth_server.resource.client.class">Ingewikkeld\Rest\OAuthServerBundle\Resource\Client</parameter>
    </parameters>

    <services>
        <service id="ingewikkeld_rest_oauth_server.resource.client" class="%ingewikkeld_rest_oauth_server.resource.client.class%">
            <argument type="service" id="doctrine.orm.entity_manager"/>
            <argument type="service" id="translator"/>
            <argument type="service" id="router"/>
        </service>

        <service id="ingewikkeld_rest_oauth_server.controller.client" class="%ingewikkeld_rest_oauth_server.controller.client.class%">
            <argument type="service" id="translator"/>
            <argument type="service" id="form.factory" />
            <argument type="service" id="doctrine.orm.entity_manager"/>
            <argument type="service" id="router" />
        </service>
    </services>
</container>
